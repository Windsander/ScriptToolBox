#!/bin/bash

# base
export username=${USER}
export SSHC_PATH="${HOME}/.ssh"
export GNUPGHOME="${HOME}/.repoconfig/gnupg"

# repo => make sure repo request terminal env can be found(can only usable with abs-path)
export REPO_PATH="${HOME}/.bin/repo"
export REPO_DOWNLOAD_URL="https://storage.googleapis.com/git-repo-downloads/repo"
export REPO_URL='https://gerrit.googlesource.com/git-repo'
export REPO_REV='stable'

# anaconda3 => Set Anaconda base directory (your conda env installing/updating dir)
export CONDA_BASE_DIR="${HOME}/anaconda3"
export CONDA_ENVS_DIR="${CONDA_BASE_DIR}/envs" 
export ANACONDA_PATH="${CONDA_BASE_DIR}/condabin"
export ANACONDA_DOWNLOAD_URL="https://mirrors.tuna.tsinghua.edu.cn/anaconda/archive/Anaconda3-2024.10-1-Linux-x86_64.sh"
export ANACONDA_INSTALLS_BASH="${CONDA_BASE_DIR}/Anaconda3-2024.10-1-Linux-x86_64.sh"
export CONDARC="${HOME}/.condarc"